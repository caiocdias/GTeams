<UserControl x:Class="GTeams_wpfapp.Views.Colaborador.CadastrarColaborador"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:GTeams_wpfapp.Views.Colaborador"
             xmlns:behaviors="clr-namespace:GTeams_wpfapp.Behaviors"
             mc:Ignorable="d"
             d:DesignHeight="460" d:DesignWidth="500"
             Background="#F5F7FA">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="White"
                BorderThickness="0,0,0,1"
                BorderBrush="#EAEEF2"
                Padding="0,0,0,1">
            <Grid Margin="36,0">
                <TextBlock Text="Cadastro de Colaborador"
                           VerticalAlignment="Center"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="#1A2342"/>
            </Grid>
        </Border>

        <!-- Formulário -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Border CornerRadius="8" Background="White" Padding="32,32,32,24" Margin="28,24,28,32" 
                    BorderBrush="#EAEEF2" BorderThickness="1">
                <Grid VerticalAlignment="Top">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
            
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="250"/>
                    </Grid.ColumnDefinitions>

                    <!-- Nome -->
                    <TextBlock Text="Nome:" Grid.Row="0" Grid.Column="0"
                               VerticalAlignment="Center" 
                               Margin="0,0,8,14"
                               FontWeight="SemiBold"
                               Foreground="#1A2342"
                               />
                    <TextBox Style="{StaticResource ModernTextBox}" Grid.Row="1" Grid.Column="0"
                             Height="32"
                             Padding="10,4"
                             Margin="0,0,0,14"
                             FontSize="14"
                             BorderBrush="#B0BED1"
                             Foreground="#28314C"
                             Background="#F8FAFD"
                    />

                    <!-- CPF -->
                    <TextBlock Text="CPF:" Grid.Row="2" Grid.Column="0"
                               VerticalAlignment="Center"
                               Margin="0,0,8,14"
                               FontWeight="SemiBold"
                               Foreground="#1A2342"
                               />
                    <TextBox Style="{StaticResource ModernTextBox}" Grid.Row="3" Grid.Column="0"
                             Height="32"
                             Padding="10,4"
                             Margin="0,0,0,14"
                             FontSize="14"
                             BorderBrush="#B0BED1"
                             Foreground="#28314C"
                             Background="#F8FAFD">
                        <i:Interaction.Behaviors>
                            <behaviors:CpfMaskBehavior />
                        </i:Interaction.Behaviors>
                    </TextBox>
                    
                    <!-- Usuário -->
                    <TextBlock Text="Usuário:" Grid.Row="4" Grid.Column="0"
                               VerticalAlignment="Center"
                               Margin="0,0,8,14"
                               FontWeight="SemiBold"
                               Foreground="#1A2342"
                               />
                    <TextBox Style="{StaticResource ModernTextBox}" Grid.Row="5" Grid.Column="0"
                             Height="32"
                             Padding="10,4"
                             Margin="0,0,0,14"
                             FontSize="14"
                             BorderBrush="#B0BED1"
                             Foreground="#28314C"
                             Background="#F8FAFD"
                    />
                    
                    <!-- Senha -->
                    <TextBlock Text="Senha:" Grid.Row="0" Grid.Column="1"
                               VerticalAlignment="Center"
                               Margin="8,0,8,14"
                               FontWeight="SemiBold"
                               Foreground="#1A2342"
                               />
                    <PasswordBox Style="{StaticResource ModernPasswordBox}" Grid.Row="1" Grid.Column="1"
                                 Height="32"
                                 Padding="10,4"
                                 Margin="8,0,0,14"
                                 FontSize="14"
                                 BorderBrush="#B0BED1"
                                 Background="#F8FAFD"
                    />

                    <!-- Função -->
                    <TextBlock Text="Função:" Grid.Row="2" Grid.Column="1"
                               VerticalAlignment="Center"
                               Margin="8,0,8,14"
                               FontWeight="SemiBold"
                               Foreground="#1A2342"
                               />
                    <ComboBox Style="{StaticResource ModernComboBox}" Grid.Row="3" Grid.Column="1"
                              Height="32"
                              Padding="10,4"
                              Margin="8,0,0,14"
                              DisplayMemberPath="Nome"
                              SelectedValuePath="Valor"
                              ItemsSource="{Binding TipoFuncao}"
                              SelectedItem="{Binding FuncaoSelecionada}"
                              FontSize="14"
                              BorderBrush="#B0BED1"
                              Background="#F8FAFD"
                              Foreground="#28314C"
                              />

                    <!-- Ativo -->
                    <TextBlock Text="Ativo:" Grid.Row="4" Grid.Column="1"
                               VerticalAlignment="Center"
                               Margin="8,0,8,14"
                               FontWeight="SemiBold"
                               Foreground="#1A2342"
                               />
                    <CheckBox Grid.Row="5" Grid.Column="1"
                              Height="32"
                              Padding="10,4"
                              Margin="8,0,0,14"
                              Foreground="#28314C"
                              Background="#F8FAFD" 
                              />

                    <!-- Espaço extra para botões -->
                    <StackPanel Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,20,0,0">
                        <Button Content="Cancelar"
                                Width="100"
                                Height="36"
                                Margin="0,0,12,0"
                                Background="Transparent"
                                BorderBrush="#B0BED1"
                                Foreground="#1A2342"
                                FontWeight="SemiBold"
                                FontSize="15"
                                Padding="0"
                                Cursor="Hand"
                                />
                        <Button Content="Salvar"
                                Width="120"
                                Height="36"
                                Background="#1A2342"
                                Foreground="White"
                                FontWeight="SemiBold"
                                FontSize="15"
                                BorderThickness="0"
                                Cursor="Hand"
                                />
                    </StackPanel>
                </Grid>
            </Border>
        </ScrollViewer>
    </Grid>
</UserControl>