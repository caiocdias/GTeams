<UserControl x:Class="GTeams_wpfapp.GestaoPessoas.Views.Colaborador.ListarColaborador"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:behaviors="clr-namespace:GTeams_wpfapp.Behaviors"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d"
             d:DesignHeight="460" d:DesignWidth="500"
             Background="#F5F7FA">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="White"
                BorderThickness="0,0,0,1"
                BorderBrush="#EAEEF2"
                Padding="0,0,0,1">
            <Grid Margin="36,0">
                <TextBlock Text="Listagem de Colaboradores"
                           VerticalAlignment="Center"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="#1A2342" />
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250" />
                    <ColumnDefinition Width="250" />
                </Grid.ColumnDefinitions>
            
            <Button Content="Listar Todos"
                    Margin="0, 5, 0, 0"
                    Grid.Column="0"
                    Width="100"
                    Height="32"
                    Background="#1A2342"
                    Foreground="White"
                    FontWeight="SemiBold"
                    FontSize="13"
                    BorderThickness="0"
                    Cursor="Hand" />
            
                <StackPanel Orientation="Horizontal" Grid.Column="1">
                <xctk:RichTextBox AcceptsTab="False" 
                                  Width="120" 
                                  Margin="0, 5, 0, 0" />
                <Button Content="Buscar nome"
                        Margin="10, 5, 0, 0"
                        Grid.Column="1"
                        Width="100"
                        Height="32"
                        Background="#1A2342"
                        Foreground="White"
                        FontWeight="SemiBold"
                        FontSize="13"
                        BorderThickness="0"
                        Cursor="Hand" />
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</UserControl>